{
  "name": "react-firebase-starter",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "emu:dev": "cross-env VITE_FIREBASE_EMULATOR=1 vite",
    "emu:start": "firebase emulators:start --import=./emu-data --export-on-exit",
    "firebase:deploy": "firebase deploy",
    "emu:clean": "rm -rf emu-data",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "plop": "plop  --plopfile ./generators/plopfile.mjs",
    "lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
    "lint:format": "prettier  --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
    "lint": "yarn lint:format && yarn lint:fix",
    "deploy:firestore-rules": "firebase deploy --only firestore:rules",
    "deploy:functions": "firebase deploy --only functions",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mantine/core": "^4.2.12",
    "@mantine/form": "^4.2.12",
    "@mantine/hooks": "^4.2.12",
    "@mantine/modals": "^4.2.12",
    "@mantine/notifications": "^4.2.12",
    "date-fns": "^2.28.0",
    "firebase": "^9.9.0",
    "p-retry": "^5.1.1",
    "react": "^18.0.0",
    "react-datepicker": "^4.8.0",
    "react-dom": "^18.0.0",
    "react-error-boundary": "^3.1.4",
    "react-firebase-hooks": "^5.0.3",
    "react-query": "^3.39.1",
    "react-router-dom": "^6.3.0",
    "tabler-icons-react": "^1.52.0",
    "tiny-invariant": "^1.2.0",
    "web-vitals": "^2.1.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vitejs/plugin-react": "^1.3.0",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.1",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "plop": "^3.1.1",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "rollup": "^2.0.0",
    "rollup-plugin-visualizer": "^5.6.0",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.6.3",
    "vite": "^2.9.9",
    "vitest": "^0.18.0"
  }
}
